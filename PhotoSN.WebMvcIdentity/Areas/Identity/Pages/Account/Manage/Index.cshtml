@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="ManageIndexViewModel.Nickname"></label>
                <input asp-for="ManageIndexViewModel.Nickname" class="form-control" />
                <span asp-validation-for="ManageIndexViewModel.Nickname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input asp-for="ManageIndexViewModel.IsPrivate" />
                    <label asp-for="ManageIndexViewModel.IsPrivate"></label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ManageIndexViewModel.Bio"></label>
                <textarea asp-for="ManageIndexViewModel.Bio" class="form-control" rows="5" style="resize: none;"></textarea>
                <span asp-validation-for="ManageIndexViewModel.Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManageIndexViewModel.BirthDate"></label>
                <input asp-for="ManageIndexViewModel.BirthDate" class="form-control" type="date" />
                <span asp-validation-for="ManageIndexViewModel.BirthDate" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}